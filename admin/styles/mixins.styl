$blue = rgb(23, 136, 254)
$white = rgb(255, 255, 255)
$black = rgb(52, 52, 52)
$gray = rgb(210, 210, 210)

clearfix()
  zoom 1
  &:after
  &:before
    content ""
    display table
  &:after
    clear both

textarea,
input
  outline: none


:root
  --white-base hsl(255, 255, 255)
  --gray-darker color(black lightness(#222))
  --gray-dark color(black lightness(#404040))
  --gray color(black lightness(#555))
  --gray-light color(black lightness(#777))
  --gray-lighter color(black lightness(#777))
  --font-family-base 'Segoe UI', 'HelveticaNeue-Light', sans-serif
  --max-content-width 1000px
  --screen-xs-min 480px
  --screen-sm-min 768px
  --screen-md-min 992px
  --screen-lg-min 1200px
  --animation-swift-out .45s cubic-bezier(0.3, 1, 0.4, 1) 0s


